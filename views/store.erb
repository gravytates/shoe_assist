<h3><b><em><%= @store.name %></em></b></h3>


<div class="row">
  <div class="col-md-6">
    <p>Brand offerings:</p>
    <% if @store.brands.any? %>
      <% @store.brands.each do |brand| %>
        <li><a href="/brand/<%= brand.id %>"><%= brand.name %>, <%= brand.price %></a></li>
      <% end %>
    <% else %>
      <p>This store isn't currently offering any brands.</p>
    <% end %>
    <hr>

    <form action="/store/<%= @store.id %>/update" method="post">
      <input type="hidden" name="_method" value="patch">
      <input placeholder="<%= @store.name %>" type="text" name="store_name">
      <br><br>
      <button type="submit" class="btn btn-info">edit store name</button>
    </form>
    <br>
    <form class="" action="/store/<%= @store.id %>/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <button class="btn btn-danger" href="/">close store</button>
    </form>

    <br>
    <a href="/">Home</a>
  </div>

  <div class="col-md-6">
    <h3>Add a brand to this store</h3>
    <form action="/store/<%= @store.id%>/add_brand" method="post">
      <input type="hidden" name="_method" value="patch">
      <label for="recipes">available brands</label>
      <select class="form-control" name="brand-id">
        <% @brands.each do |brand| %>
          <option value="<%= brand.id %>"><%= brand.name %> <%= brand.price %></option>
        <% end %>
      </select>
      <br>
      <button type="submit" class="btn btn-info" name="button">add to store</button>
    </form>
  </div>
</div>
