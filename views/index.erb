<h3>Shoe Assist 720</h3>
<p>We go around the world twice for our clients</p>
<hr>


<div class="row">
  <div id="home_col" class="col-md-8">
    <form action="/store_results" method="post">
      <label for="store_search">store search:</label>
      <input type="text" name="store_search">
      <button type="submit" class="btn btn-default">search</button>
    </form>
    <br>
    <form action="/new_store" method="post">
      <label for="store_name">new store name:</label>
      <br>
      <input class="form-control" type="text" name="store_name">
      <br>
      <button type="submit" class="btn btn-success">add store</button>
    </form>

    <% if @stores.any? %>
      <% @stores.each do |store| %>
        <li><a href="/store/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
    <% else %>
      <p>There are no stores listed yet.</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <form action="/brand_results" method="post">
      <label for="brand_search">brand search:</label>
      <input type="text" name="brand_search">
      <button type="submit" class="btn btn-default">search</button>
    </form>
    <br>
    <form action="/new_brand" method="post">
      <label for="brand_name">new brand name:</label>
      <br>
      <input class="form-control" type="text" name="brand_name">
      <label for="brand_price">Price per shoe pair:</label>
      <br>
      <input type="number" min="0.01" step="0.01" name="brand_price" value="">
      <br><br>
      <button type="submit" class="btn btn-success">add brand</button>
    </form>

    <% if @brands.any? %>
      <% @brands.each do |brand| %>
        <li><a href="/brand/<%= brand.id %>"><%= brand.name %>, <%= brand.price %></a></li>
      <% end %>
    <% else %>
      <p>There are no brands listed yet.</p>
    <% end %>
  </div>
</div>
